//- show all authors, each author name linked to its associated author detail page
//- The date of birth and date of death should be listed after the name on the same line.

extends layout

block content
  h1= title

  ul
    each author in author_list
      li
        a(href=author.url) #{author.name}
        p (#{author.url})
        |  (#{author.date_of_birth_formatted} - #{author.date_of_death_formatted})

    else
      li There are no authors.
